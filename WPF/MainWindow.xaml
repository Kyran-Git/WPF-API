<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="750" 
        Width="1000">
    
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="LightGray" Height="50">
            <Button Content="Home" Width="100" Margin="5" Click="ToHome"/>
            <Button Content="Journals" Width="100" Margin="5" Click="ToJournals"/>
            <Button Content="Entries" Width="100" Margin="5" Click="ToEntries"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Margin="0,50,0,0" NavigationUIVisibility="Hidden" BorderBrush="Gray" BorderThickness="1"/>
    </Grid>
</Window>
