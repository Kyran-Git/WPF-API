<UserControl x:Class="WPF.PopUps.InfoPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="150">
    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="Gray" BorderThickness="1">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="MessageText" FontSize="16" TextAlignment="Center" TextWrapping="Wrap" />
            <Button Content="OK" Width="100" HorizontalAlignment="Center" Margin="0,20" Click="Ok_Click"/>
        </StackPanel>
    </Border>
</UserControl>
