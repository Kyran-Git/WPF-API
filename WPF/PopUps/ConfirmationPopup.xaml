<UserControl x:Class="WPF.PopUps.ConfirmationPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="200">
    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="Gray" BorderThickness="1">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="MessageText" FontSize="16" TextAlignment="Center" TextWrapping="Wrap" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Confirm" Width="100" Margin="10,0" Click="Confirm_Click"/>
                <Button Content="Cancel" Width="100" Margin="10,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
